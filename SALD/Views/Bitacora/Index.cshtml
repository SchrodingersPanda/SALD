@model IEnumerable<SALD.Models.Bitacora>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista de Bitácoras</h2>

<p>
    <input type="button" class="btn btn-info" value="Crear nuevo" onclick="location.href='@Url.Action("Create", "Bitacora")'" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Planificacion.Encargado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlanificacionID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Novedades)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Planificacion.Encargado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlanificacionID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Novedades)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.ID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
<div>
    <form>
        <input type="button" class="btn btn-success" value="Imprimir" onClick="window.print()">
    </form>
</div>